{% extends 'base.html.twig' %}
{% block title %}ProStage | Listes des formations{% endblock %}

{% block body %}
<div class="row">
		<div class="col-md-12">
        <h3>Liste des formations :</h3>

		<table class="table">
			<thead>
				<tr>
					<th>Acronyme</th>
					<th>Nom complet</th>
				</tr>
			</thead>
			<tbody>
				{% for uneFormation in formations %}
					<tr>
						<th scope="row"><a href="{{path('affichageStageParFormation', {id:uneFormation.id})}}">{{uneFormation.nomCourt}}</a></th>
						<th scope="row">{{uneFormation.nomLong}}</th>
					</tr>
				{% endfor %}
			</tbody>
			</table>
		</div>
	</div>
{% endblock %}
